
<web-app>
	<display-name>sgp</display-name>

	<servlet>
		<servlet-name>ListerCollaborateursController</servlet-name>
		<servlet-class>dev.sgp.web.ListerCollaborateursController
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ListerCollaborateursController</servlet-name>
		<url-pattern>/collaborateurs/lister</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>EditerCollaborateurController</servlet-name>
		<servlet-class>dev.sgp.web.EditerCollaborateurController
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>EditerCollaborateurController</servlet-name>
		<url-pattern>/collaborateurs/editer</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>AjouterCollaborateurController</servlet-name>
		<servlet-class>dev.sgp.web.AjouterCollaborateurController
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AjouterCollaborateurController</servlet-name>
		<url-pattern>/collaborateurs/ajouter</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>StatistiqueController</servlet-name>
		<servlet-class>dev.sgp.web.StatistiqueController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>StatistiqueController</servlet-name>
		<url-pattern>/statistiques</url-pattern>
	</servlet-mapping>


	<filter>
		<filter-name>FrequentationFilter</filter-name>
		<filter-class>dev.sgp.filtre.FrequentationFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>FrequentationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


</web-app>
